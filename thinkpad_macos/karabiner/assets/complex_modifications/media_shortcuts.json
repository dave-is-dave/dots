{
  "title": "Left_Option + X/C/V -> Rewind/Play_Pause/Fast_Forward",
  "rules": [
    {
      "description": "Left_Option + C -> Play_Pause",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "left_option"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "play_or_pause"
            }
          ]
        }
      ]
    },
    {
      "description": "Left_Option + X -> Rewind",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "x",
            "modifiers": {
              "mandatory": [
                "left_option"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "rewind"
            }
          ]
        }
      ]
    },
    {
      "description": "Left_Option + V -> Fast_Forward",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "v",
            "modifiers": {
              "mandatory": [
                "left_option"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "fast_forward"
            }
          ]
        }
      ]
    }
  ]
}
