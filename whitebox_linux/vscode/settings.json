{
    "editor.acceptSuggestionOnEnter": "off",
	"editor.fontFamily": "'SF Mono', 'monospace', monospace",
    "editor.fontSize": 12,
    "editor.insertSpaces": false,
    "editor.minimap.enabled": false,
    // rust fmt on save (requires rust-analyzer extension)
    "[rust]": {
        "editor.formatOnSave": true
    },

    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.editor.untitled.hint": "hidden",
    "workbench.startupEditor": "none",

    "terminal.integrated.fontSize": 12,
    "terminal.integrated.sendKeybindingsToShell": true,


    // X11 custom key bindings fix
    "keyboard.dispatch": "keyCode",
    
    "security.workspace.trust.enabled": false,

    "debug.console.fontSize": 12,
    "markdown.preview.fontSize": 12,
    "scm.diffDecorationsGutterVisibility": "hover",
    "explorer.confirmDragAndDrop": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    "extensions.ignoreRecommendations": true,

    // extensions

    "cSpell.language": "en-GB",
    "cSpell.userWords": [
        "unessisary"
    ],
    "editor.foldingMaximumRegions": 50000,
    "cSpell.enabled": false,
    "workbench.colorTheme": "Default Light+",

    //"glsllint.glslangValidatorArgs": "-V",
    "glsllint.additionalStageAssociations": {
        ".fsh": "frag",
        ".vsh": "vert",
    },
    
