#!/bin/sh

# autocompletion list in /usr/share/zsh/site-functions/_set-theme

export THEME="$1"
. ~/.config/bspwm/bspwmrc
echo "${THEME}" > ~/.config/archie/theme_system

#if [ "$THEME" = "light" ]; then echo "Yaru-Orange" > ~/.config/theme_gtk;
#elif [ "$THEME" = "grass" ]; then echo "Yaru-Orange" > ~/.config/theme_gtk;
#elif [ "$THEME" = "coral" ]; then echo "Yaru-Orange-dark" > ~/.config/theme_gtk;
#elif [ "$THEME" = "flowers" ]; then echo "Yaru-Orange-dark" > ~/.config/theme_gtk;
#elif [ "$THEME" = "dark" ]; then echo "Yaru-Orange-dark" > ~/.config/theme_gtk;
#else echo "Yaru-Orange-dark" > ~/.config/theme_gtk; fi
if [ "$THEME" = "grass" ]; then echo "Catppuccin-Latte-Standard-Lavender-Light" > ~/.config/archie/theme_gtk;
else echo "Catppuccin-Macchiato-Standard-Lavender-Dark" > ~/.config/archie/theme_gtk; fi
sed -i "/gtk-theme-name/c\gtk-theme-name = $(cat ~/.config/archie/theme_gtk)" ./settings.ini
