{
    "editor.acceptSuggestionOnEnter": "off",
    "editor.fontFamily": "'Fira Mono', 'SF Mono', 'Cascadia Mono', 'Symbols Nerd Font', monospace",
    "editor.insertSpaces": false,
    "glsllint.glslangValidatorPath": "/usr/bin/glslangValidator",
    "editor.minimap.enabled": false,
    "editor.showFoldingControls": "always",
    // rust fmt on save (requires rust-analyzer extension)
    "[rust]": {
        "editor.formatOnSave": true
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.editor.untitled.hint": "hidden",
    "workbench.startupEditor": "none",
    "terminal.external.linuxExec": "alacritty",
    "window.menuBarVisibility": "toggle",
    "explorer.confirmDelete": false,
    // X11 custom key bindings fix
    "keyboard.dispatch": "keyCode",
    "security.workspace.trust.enabled": false,
    "explorer.confirmDragAndDrop": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "extensions.ignoreRecommendations": true,
    // extensions
    "cSpell.language": "en-GB",
    "cSpell.userWords": [
        "unessisary"
    ],
    "editor.foldingMaximumRegions": 50000,
    //"glsllint.glslangValidatorArgs": "-V",
    "glsllint.additionalStageAssociations": {
        ".fsh": "frag",
        ".vsh": "vert",
        ".fs.glsl": "frag",
        ".vs.glsl": "vert",
        ".cs.glsl": "comp",
    },
    "todohighlight.isCaseSensitive": false,
    "todohighlight.keywords": [
        "TODO",
    ],
    "debug.allowBreakpointsEverywhere": true,
    "php.validate.enable": false,
    "markdown.preview.fontSize": 18,
    "terminal.integrated.allowChords": false,
    "glsllint.glslangValidatorArgs": "-V",
    "cmake.toolset": "",
    "editor.stickyScroll.enabled": true,
    "cSpell.enableFiletypes": [
        "toml"
    ],
    "terminal.integrated.fontFamily": "'SF Mono', 'Cascadia Mono', 'monospace'",
    "workbench.iconTheme": "file-icons",
    "debug.terminal.clearBeforeReusing": true,
    "git.confirmSync": false,
    "terminal.integrated.commandsToSkipShell": [
        "workbench.action.terminal.focusTabs",
        "-workbench.action.quickOpen"
    ],
    "cSpell.enabled": false,
    "scm.inputFontSize": 16,
    "colorize.languages": [
        "css",
        "sass",
        "scss",
        "less",
        "postcss",
        "sss",
        "stylus",
        "xml",
        "svg"
    ],
    "window.zoomLevel": 1,
    "editor.fontSize": 14,
    "[Log]": {
        "editor.fontSize": 14
    },
    "git.autofetch": true,
    "editor.find.seedSearchStringFromSelection": "selection",
    "git.ignoreRebaseWarning": true,
    "terminal.integrated.gpuAcceleration": "off",
    //"workbench.colorCustomizations": {
